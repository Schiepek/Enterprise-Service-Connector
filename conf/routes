# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                  controllers.SalesForceController.index

# SalesForce
GET         /salesforce                        controllers.SalesForceController.index
GET         /salesforce/oauth2                 controllers.SalesForceController.oauth2()
GET         /salesforce/oauth2/callback        controllers.SalesForceController.callback()
GET         /salesforce/contacts               controllers.SalesForceController.getSalesforceContacts()
GET         /salesforce/check                  controllers.SalesForceController.checkStatus()
GET         /SALESFORCE/check                  controllers.SalesForceController.checkStatus()

GET         /gmail                             controllers.GMailController.index
POST        /gmail/authorize                   controllers.GMailController.authorize(provider: String)
POST        /gmail                             controllers.GMailController.save(provider: String)
POST        /gmail/transfer                    controllers.GMailController.transferContacts()
GET         /gmail/callbackgmail               controllers.GMailController.callbackGmail()
GET         /gmail/callbacksalesforce          controllers.GMailController.callbackSalesForce()
POST        /gmail/settings                    controllers.GMailController.setSettings()
GET         /gmail/check                       controllers.GMailController.checkStatus()
GET         /GMAIL/check                       controllers.GMailController.checkStatus()

GET         /logs                              controllers.LoggingController.index()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                      controllers.Assets.at(path="/public", file)

->          /                                  ac.Routes
