# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                       controllers.SalesForceController.index

# SalesForce
GET        /salesforce                        controllers.SalesForceController.index
GET        /salesforce/oauth2                 controllers.SalesForceController.oauth2()
GET        /salesforce/oauth2/callback        controllers.SalesForceController.callback()
GET        /salesforce/contacts               controllers.SalesForceController.getSalesforceContacts()

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file           controllers.Assets.at(path="/public", file)

GET        /gmail/index            controllers.GMailController.index
GET        /gmail/authorize        controllers.GMailController.authorize()
GET        /gmail/callback         controllers.GMailController.callback()
GET        /gmail/test             controllers.GMailController.test()




    