# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                  controllers.SalesForceController.index

# SalesForce
GET         /salesforce                        controllers.SalesForceController.index
GET         /salesforce/oauth2                 controllers.SalesForceController.oauth2()
GET         /salesforce/oauth2/callback        controllers.SalesForceController.callback()
GET         /salesforce/contacts               controllers.SalesForceController.getSalesforceContacts()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                      controllers.Assets.at(path="/public", file)

GET         /gmail                             controllers.GMailController.index
POST        /gmail/authorize/:id               controllers.GMailController.authorize(id: Long)
POST        /gmail/delete/:id                  controllers.GMailController.deleteMail(id: Long)
POST        /gmail/new                         controllers.GMailController.newMail()
POST        /gmail/insertcontact/:id           controllers.GMailController.insertContact(id: Long)
GET         /gmail/callback                    controllers.GMailController.callback()

GET         /settings                          controllers.SettingsController.index
POST        /settings                          controllers.SettingsController.setSettings()

#->      /                                      ac.Routes